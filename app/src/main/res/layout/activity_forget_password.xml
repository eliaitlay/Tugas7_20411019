<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/holo_orange_dark"
    tools:context=".MainActivity">


        <ImageView
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/forgetlay" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Passwor"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/material_dynamic_neutral0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"/>


        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="24dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginEnd="24dp"
            android:hint="enter your email"
            android:textColor="@color/material_dynamic_neutral_variant0"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/iclay_email"
            android:drawablePadding="8dp"/>


        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RESET"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

</LinearLayout>